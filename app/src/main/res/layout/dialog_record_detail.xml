<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="记录详情（三级）"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- 烟农姓名 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="烟农姓名："
            android:textSize="14sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_record_farmer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="14sp"
            android:textColor="#212121" />

    </LinearLayout>

    <!-- 预检编号 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="预检编号："
            android:textSize="14sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_record_precheck_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="14sp"
            android:textColor="#212121" />

    </LinearLayout>

    <!-- 合同编号 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="合同编号："
            android:textSize="14sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_record_contract_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="14sp"
            android:textColor="#212121" />

    </LinearLayout>

    <!-- 部叶类型 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="部叶类型："
            android:textSize="14sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_record_tobacco_part"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 重量 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="重量："
            android:textSize="14sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_record_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="14sp"
            android:textColor="#2196F3"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 捆数 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="捆数："
            android:textSize="14sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_record_bundles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="14sp"
            android:textColor="#FF9800"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 等级 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="等级："
            android:textSize="14sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_record_grade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="14sp"
            android:textColor="#212121" />

    </LinearLayout>

    <!-- 价格 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="价格："
            android:textSize="14sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_record_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="14sp"
            android:textColor="#212121" />

    </LinearLayout>

    <!-- 时间戳 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="记录时间："
            android:textSize="14sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_record_timestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="14sp"
            android:textColor="#212121" />

    </LinearLayout>

    <!-- 按钮 -->
    <Button
        android:id="@+id/btn_close_record_dialog"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="关闭"
        android:textSize="16sp"
        android:backgroundTint="#757575"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp" />

</LinearLayout> 