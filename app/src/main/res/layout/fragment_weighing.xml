<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.tobacco.weight.ui.main.WeightingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#F5F5F5">

    <!-- 顶部标题 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="称重界面（主界面）"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#212121"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 农户信息区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_farmer_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_device_status"
        app:layout_constraintBottom_toTopOf="@id/card_tobacco_classification"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintHeight_percent="0.55">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 农户姓名和合同号 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="烟农姓名："
                    android:textSize="16sp"
                    android:textColor="#757575" />

                <EditText
                    android:id="@+id/et_farmer_name"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="输入烟农姓名"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:background="@android:color/white"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:inputType="textPersonName" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同号："
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:layout_marginStart="16dp" />

                <TextView
                    android:id="@+id/tv_contract_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未设置"
                    android:textSize="18sp"
                    android:textColor="#212121"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 重量显示区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实时重量："
                    android:textSize="16sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tv_current_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5.00 kg"
                    android:textSize="24sp"
                    android:textColor="#FF5722"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:padding="4dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- 操作按钮区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_upper_level"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="上部叶"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#4CAF50" />

                <Button
                    android:id="@+id/btn_middle_level"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="中部叶"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#2196F3" />

                <Button
                    android:id="@+id/btn_lower_level"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="下部叶"
                    android:textSize="12sp"
                    android:backgroundTint="#FF9800" />

            </LinearLayout>

            <!-- 底部操作按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="确认"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#9C27B0" />

                <Button
                    android:id="@+id/btn_print"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="打印"
                    android:textSize="12sp"
                    android:backgroundTint="#1976D2" />

            </LinearLayout>

            <!-- 合同量和预检比例信息区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:background="#F0F0F0"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同信息与预检比例"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#212121" />

                <!-- 合同量和预检比例 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="合同量"
                            android:textSize="12sp"
                            android:textColor="#757575" />

                        <EditText
                            android:id="@+id/et_contract_amount"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:hint="输入合同量(kg)"
                            android:textSize="10sp"
                            android:background="@android:color/white"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:inputType="numberDecimal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预检比例"
                            android:textSize="12sp"
                            android:textColor="#757575" />

                        <EditText
                            android:id="@+id/et_precheck_ratio"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:hint="输入预检比例(%)"
                            android:textSize="10sp"
                            android:background="@android:color/white"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:inputType="numberDecimal" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 上中下部叶预检比例 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="各部叶预检比例"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="6dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="上部叶(%)"
                            android:textSize="12sp"
                            android:textColor="#757575" />

                        <EditText
                            android:id="@+id/et_upper_ratio"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:hint="上部叶"
                            android:textSize="10sp"
                            android:background="@android:color/white"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:inputType="numberDecimal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="中部叶(%)"
                            android:textSize="12sp"
                            android:textColor="#757575" />

                        <EditText
                            android:id="@+id/et_middle_ratio"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:hint="中部叶"
                            android:textSize="10sp"
                            android:background="@android:color/white"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:inputType="numberDecimal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下部叶(%)"
                            android:textSize="12sp"
                            android:textColor="#757575" />

                        <EditText
                            android:id="@+id/et_lower_ratio"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:hint="下部叶"
                            android:textSize="10sp"
                            android:background="@android:color/white"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:inputType="numberDecimal" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 右侧设备状态区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_device_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toEndOf="@id/card_farmer_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card_tobacco_classification"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.55">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预检码对接"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预检码等级"
                android:textSize="16sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_precheck_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未检测"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginTop="4dp" />

            <!-- 预检信息显示 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预检信息"
                android:textSize="16sp"
                android:textColor="#757575"
                android:layout_marginTop="16dp" />

            <!-- 预检编号 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预检编号"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_precheck_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未生成"
                android:textSize="14sp"
                android:textColor="#212121"
                android:layout_marginTop="2dp" />

            <!-- 预检日期 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预检日期"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_precheck_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="14sp"
                android:textColor="#212121"
                android:layout_marginTop="2dp" />

            <!-- 预检比例 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预检比例"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_precheck_ratio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.precheckRatio}"
                android:textSize="14sp"
                android:textColor="#212121"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预检重量"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_precheck_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00 kg"
                android:textSize="14sp"
                android:textColor="#212121"
                android:layout_marginTop="2dp" />

            <Button
                android:id="@+id/btn_read_id_card"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="读取身份证"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#E91E63" />

            <Button
                android:id="@+id/btn_reset_precheck"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="重置预检数据"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FF5722"
                android:textColor="@android:color/white"
                android:enabled="true"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预检员信息"
                android:textSize="16sp"
                android:textColor="#757575"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tv_device_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备状态"
                android:textSize="16sp"
                android:textColor="#212121"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 烟叶分类区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_tobacco_classification"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/card_farmer_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.35">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理员界面 (一级)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="烟农信息表"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp" />

            <!-- 固定表头 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:background="#E0E0E0">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="2"
                    android:text="姓名"
                    android:textSize="12sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="#E0E0E0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="2"
                    android:text="预检捆数（总）"
                    android:textSize="10sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="#E0E0E0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="2"
                    android:text="预检重量（总）"
                    android:textSize="10sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="#E0E0E0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:text="查看"
                    android:textSize="12sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="#E0E0E0" />

            </LinearLayout>

            <!-- 可滑动的数据区域 -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="false">

                <LinearLayout
                    android:id="@+id/layout_farmer_data_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <!-- 这里将动态添加烟农数据行 -->

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout> 