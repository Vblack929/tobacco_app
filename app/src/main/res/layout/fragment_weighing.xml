<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="24dp"
    tools:context=".ui.main.WeightingFragment">

    <!-- 顶部信息栏 -->
    <LinearLayout
        android:id="@+id/top_info_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_card_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 农户姓名 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="农户姓名"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_farmer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="--"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="张三" />
        </LinearLayout>

        <!-- 合同编号 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合同编号"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_contract_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="--"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="HT20240101001" />
        </LinearLayout>

        <!-- 余额 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户余额"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="¥0.00"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="¥15,680.50" />
        </LinearLayout>
    </LinearLayout>

    <!-- 实时重量显示区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/weight_display_card"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toStartOf="@+id/status_panel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_info_layout"
        app:layout_constraintWidth_percent="0.65">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/weight_display_background">

            <TextView
                android:id="@+id/tv_weight_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实时重量"
                android:textColor="@color/text_secondary"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" />

            <!-- 重量数值 - 绑定currentWeight LiveData -->
            <TextView
                android:id="@+id/tv_current_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.000"
                android:textColor="@color/accent"
                android:textSize="56sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_mono"
                app:layout_constraintBottom_toTopOf="@+id/tv_weight_unit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_weight_label"
                tools:text="125.678" />

            <TextView
                android:id="@+id/tv_weight_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textColor="@color/text_secondary"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_weight_status"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- 重量状态指示 - 绑定weightData.isStable -->
            <TextView
                android:id="@+id/tv_weight_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/status_indicator_background"
                android:padding="8dp"
                android:text="稳定"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="稳定" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- 右侧状态面板 -->
    <LinearLayout
        android:id="@+id/status_panel"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rounded_card_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weight_display_card"
        app:layout_constraintTop_toTopOf="@+id/weight_display_card"
        app:layout_constraintWidth_percent="0.3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备状态"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 设备连接状态 - 绑定scaleConnected, printerConnected等 -->
        <TextView
            android:id="@+id/tv_device_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="电子秤: 已连接\n打印机: 已连接\n身份证: 已连接"
            android:textColor="@color/success"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            tools:text="电子秤: ✓\n打印机: ✓\n身份证: ✓" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="@color/divider" />

        <!-- 预检码状态显示 -->
        <TextView
            android:id="@+id/tv_precheck_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="预检码可印"
            android:textColor="@color/success"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- 预检码确认按钮 -->
        <Button
            android:id="@+id/btn_precheck_confirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="预检码确认"
            android:textSize="16sp"
            style="@style/Widget.Material3.Button.OutlinedButton" />
    </LinearLayout>

    <!-- 烟叶信息输入区域 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/tobacco_info_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight_display_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="烟叶信息"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- 烟叶部位选择 - 绑定tobaccoPart LiveData -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="烟叶部位"
                android:textColor="@color/text_secondary"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/rg_tobacco_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_upper_leaf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="上部叶"
                    android:textSize="18sp"
                    android:padding="12dp" />

                <RadioButton
                    android:id="@+id/rb_middle_leaf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="中部叶"
                    android:textSize="18sp"
                    android:padding="12dp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rb_lower_leaf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="下部叶"
                    android:textSize="18sp"
                    android:padding="12dp" />
            </RadioGroup>

            <!-- 捆数输入 - 绑定tobaccoBundles LiveData -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="捆数："
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_bundle_count"
                    android:layout_width="120dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/edittext_background"
                    android:gravity="center"
                    android:hint="1"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="捆"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 底部操作按钮区域 -->
    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tobacco_info_card">

        <!-- 电子秤控制按钮 -->
        <Button
            android:id="@+id/btn_tare"
            android:layout_width="120dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:text="去皮重"
            android:textSize="16sp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btn_zero"
            android:layout_width="120dp"
            android:layout_height="56dp"
            android:layout_marginEnd="32dp"
            android:text="清零"
            android:textSize="16sp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- 主要操作按钮 - 绑定saveWeightRecord() -->
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="160dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:text="确认保存"
            android:textSize="18sp"
            android:textStyle="bold"
            style="@style/Widget.Material3.Button" />

        <!-- 打印按钮 - 绑定printLabel() -->
        <Button
            android:id="@+id/btn_print"
            android:layout_width="160dp"
            android:layout_height="64dp"
            android:text="打印标签"
            android:textSize="18sp"
            android:textStyle="bold"
            style="@style/Widget.Material3.Button.OutlinedButton" />
    </LinearLayout>

    <!-- 状态消息显示 - 绑定statusMessage LiveData -->
    <TextView
        android:id="@+id/tv_status_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/status_message_background"
        android:gravity="center"
        android:padding="12dp"
        android:text="设备就绪，请放置烟叶"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_buttons"
        tools:text="重量稳定，可以保存记录" />

</androidx.constraintlayout.widget.ConstraintLayout> 