<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="管理员界面（二级）"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- 烟农姓名 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:textSize="16sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_detail_farmer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="16sp"
            android:textColor="#212121"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 身份证号 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="身份证号："
            android:textSize="16sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_detail_id_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="16sp"
            android:textColor="#212121" />

    </LinearLayout>

    <!-- 总重量 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="总重量："
            android:textSize="16sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_detail_total_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="16sp"
            android:textColor="#212121" />

    </LinearLayout>

    <!-- 记录总数 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="记录总数："
            android:textSize="16sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tv_detail_record_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="--"
            android:textSize="16sp"
            android:textColor="#212121" />

    </LinearLayout>

    <!-- 个人记录明细分组 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="个人记录明细"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp" />

    <!-- 记录列表表头 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="8dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="时间"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="捆数"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="合同编号"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="操作"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center" />

    </LinearLayout>

    <!-- 滚动容器用于显示记录 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layout_records_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_export_farmer_data"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="导出该烟农记录"
            android:textSize="14sp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_close_dialog"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="关闭"
            android:textSize="16sp"
            android:backgroundTint="#757575"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout> 