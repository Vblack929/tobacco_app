<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.tobacco.weight.ui.admin.AdminViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        tools:context=".ui.admin.AdminActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="烟叶称重管理系统"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text_color"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- 预检统计信息 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预检统计信息"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text_color"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="总预检数"
                                android:textSize="14sp"
                                android:textColor="@color/secondary_text_color" />

                            <TextView
                                android:id="@+id/tv_total_precheck_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_color" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已完成数"
                                android:textSize="14sp"
                                android:textColor="@color/secondary_text_color" />

                            <TextView
                                android:id="@+id/tv_current_precheck_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/success_color" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="总重量"
                                android:textSize="14sp"
                                android:textColor="@color/secondary_text_color" />

                            <TextView
                                android:id="@+id/tv_total_precheck_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00 kg"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/warning_color" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="平均重量"
                                android:textSize="14sp"
                                android:textColor="@color/secondary_text_color" />

                            <TextView
                                android:id="@+id/tv_average_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00 kg"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/info_color" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 烟叶分类统计 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="烟叶分类统计（一级）"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text_color"
                        android:layout_marginBottom="16dp" />

                    <!-- 表格头 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/primary_light_color"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="姓名"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="预检总捆数"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="预检总重量"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- 张三 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="张三"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text_color"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_farmer_a_bundle_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="50"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text_color"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_farmer_a_total_weight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="125.30 kg"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text_color"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- 李四 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/background_light"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="李四"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text_color"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_farmer_b_bundle_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="38"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text_color"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_farmer_b_total_weight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="96.75 kg"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text_color"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- 王五 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="王五"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text_color"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_farmer_c_bundle_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="42"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text_color"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_farmer_c_total_weight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="108.20 kg"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text_color"
                            android:gravity="center" />

                    </LinearLayout>

                    <!-- 赵六 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/background_light"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="赵六"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text_color"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_farmer_d_bundle_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="35"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text_color"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/tv_farmer_d_total_weight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="87.90 kg"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text_color"
                            android:gravity="center" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 操作按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btn_refresh_data"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="刷新数据"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/primary_color" />

                <Button
                    android:id="@+id/btn_export_data"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="导出数据"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/success_color" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout> 