<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                                           
                 
                            
                                                                    
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        android:padding="24dp"
        tools:context=".ui.records.RecordsFragment" android:tag="layout/fragment_records_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <!-- 顶部标题和筛选区域 -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card_background"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_list"
                android:contentDescription="历史记录图标"
                app:tint="@color/primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="历史记录"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_export"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:text="导出"
                android:textSize="16sp"
                android:tag="binding_1"                             
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="返回"
                android:textSize="16sp"
                style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>

        <!-- 搜索和筛选区域 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/filter_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="筛选条件"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- 第一行：搜索框和日期范围 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 搜索框 -->
                    <EditText
                        android:id="@+id/et_search_records"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:background="@drawable/search_edittext_background"
                        android:drawableStart="@drawable/ic_search"
                        android:drawablePadding="12dp"
                        android:hint="搜索农户姓名、合同号"
                        android:inputType="text"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:textColorHint="@color/text_hint"
                        android:tag="binding_2"                  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="日期范围："
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp" />

                    <!-- 开始日期 -->
                    <Button
                        android:id="@+id/btn_start_date"
                        android:layout_width="140dp"
                        android:layout_height="56dp"
                        android:tag="binding_3"              
                        android:textSize="14sp"
                                                                              
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        tools:text="2024-03-01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="至"
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp" />

                    <!-- 结束日期 -->
                    <Button
                        android:id="@+id/btn_end_date"
                        android:layout_width="140dp"
                        android:layout_height="56dp"
                        android:tag="binding_4"            
                        android:textSize="14sp"
                                                                            
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        tools:text="2024-03-15" />
                </LinearLayout>

                <!-- 第二行：烟叶部位筛选和排序 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="烟叶部位："
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinner_tobacco_part"
                        android:layout_width="160dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="12dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="排序："
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinner_sort"
                        android:layout_width="160dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="12dp" />

                    <Button
                        android:id="@+id/btn_filter"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:text="筛选"
                        android:textSize="16sp"
                        android:tag="binding_5"                           
                        style="@style/Widget.Material3.Button" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 统计信息区域 -->
        <LinearLayout
            android:id="@+id/stats_summary_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/stats_background"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_card">

            <!-- 记录总数 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_total_records"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_6"                                 
                    android:textColor="@color/primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="156" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总记录数"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 总重量 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_total_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_7"                                              
                    android:textColor="@color/accent"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="15,680.5kg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总重量"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 总金额 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_8"                                             
                    android:textColor="@color/success"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="¥290,486.25" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总金额"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 平均单价 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_avg_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="binding_9"                                          
                    android:textColor="@color/warning"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="¥18.50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平均单价"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 记录列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_records_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/recyclerview_background"
            android:clipToPadding="false"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stats_summary_layout"
            tools:listitem="@layout/item_weight_record" />

        <!-- 空状态显示 -->
        <LinearLayout
            android:id="@+id/empty_records_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:tag="binding_10"                                            
            app:layout_constraintBottom_toBottomOf="@+id/rv_records_list"
            app:layout_constraintEnd_toEndOf="@+id/rv_records_list"
            app:layout_constraintStart_toStartOf="@+id/rv_records_list"
            app:layout_constraintTop_toTopOf="@+id/rv_records_list">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_empty_list"
                android:alpha="0.5"
                app:tint="@color/text_hint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="暂无称重记录"
                android:textColor="@color/text_hint"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="请先进行称重操作"
                android:textColor="@color/text_hint"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 加载状态指示器 -->
        <ProgressBar
            android:id="@+id/progress_loading_records"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:tag="binding_11"                                              
            app:layout_constraintBottom_toBottomOf="@+id/rv_records_list"
            app:layout_constraintEnd_toEndOf="@+id/rv_records_list"
            app:layout_constraintStart_toStartOf="@+id/rv_records_list"
            app:layout_constraintTop_toTopOf="@+id/rv_records_list" />

        <!-- 浮动操作按钮 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:src="@drawable/ic_list"
            android:contentDescription="新增记录"
            android:tag="binding_12"                           
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
          